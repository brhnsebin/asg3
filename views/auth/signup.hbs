<main class="container mt-5">
    <div class="card mx-auto mt-5 shadow" style="width: 20rem;">
        <div class="card-body">
            <h5 class="card-title text-center mb-4">Signup</h5>

            <form class="text-center" action="/signup" method="POST">
                <div class="form-group">
                    <input type="text" class="form-control" id="name" name="name" placeholder="Name">
                </div>
                <div class="form-group">
                    <input type="email" class="form-control" id="email" name="email" placeholder="Email">
                </div>
                <div class="form-group">
                    <input type="password" class="form-control" id="password" name="password" placeholder="Password">
                </div>
                <div class="form-group">
                    <input type="password" class="form-control" id="password2" name="password2"
                        placeholder="Confirm Password">
                </div>
                <div class="form-group">
                    <input type="text" class="form-control" id="phone" name="phone" placeholder="Phone number">
                </div>
                <div class="form-group">
                    <input type="text" class="form-control" id="imgUrl" name="imgUrl" placeholder="Image Url">
                </div>
                <button type="submit" class="btn btn-primary">signup</button>
            </form>
        </div>
    </div>
</main>